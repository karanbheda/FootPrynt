<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.footprynt.footprynt.ProfileFragment">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageButton
           android:layout_width="175dp"
           android:layout_height="175dp"
           android:id="@+id/iv_profile"
           android:layout_gravity="center"
           android:layout_marginTop="30dp"
           android:foregroundGravity="center_horizontal|center"
           android:layout_centerHorizontal="true"
           android:src="@drawable/ic_menu_camera"
           android:background="@drawable/round"
           android:clickable="false"
           />
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:foreground="@drawable/round"
           android:layout_marginTop="150dp"
           android:layout_marginRight="80dp"
           android:layout_alignParentRight="true"
           android:id="@+id/imgEdit"
           android:src="@drawable/ic_action_edit" />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/imgEdit"
           android:background="@drawable/textview_border"
           android:hint="Name"
           android:layout_marginTop="20dp"
           android:paddingTop="6dp"
           android:paddingBottom="8dp"
           android:paddingLeft="6dp"
           android:textSize="18sp"
           android:layout_marginRight="40dp"
           android:layout_marginLeft="40dp"
           android:id="@+id/tvName"
           android:gravity="center_vertical"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@+id/tvName"
           android:layout_marginTop="10dp"
           android:background="@drawable/textview_border"
           android:hint="Email Id"
           android:layout_marginRight="40dp"
           android:layout_marginLeft="40dp"
           android:paddingTop="6dp"
           android:paddingBottom="8dp"
           android:paddingLeft="6dp"
           android:textSize="18sp"
           android:id="@+id/tvEmailId"
           android:gravity="center_vertical"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginTop="10dp"
           android:layout_below="@+id/tvEmailId"
           android:background="@drawable/textview_border"
           android:hint="Mobile No"
           android:layout_marginRight="40dp"
           android:layout_marginLeft="40dp"
           android:paddingTop="6dp"
           android:paddingBottom="8dp"
           android:paddingLeft="6dp"
           android:textSize="18sp"
           android:id="@+id/tvMobileNo"
           android:gravity="center_vertical"/>


   </RelativeLayout>

</ScrollView>

</FrameLayout>
