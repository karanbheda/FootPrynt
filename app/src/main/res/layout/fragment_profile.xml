<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.footprynt.footprynt.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/profile_image"
           android:layout_width="160dp"
           android:layout_height="160dp"
           android:layout_gravity="center"
           android:layout_marginTop="30dp"
           android:foregroundGravity="center_horizontal|center"
           android:layout_centerHorizontal="true"
           android:src="@drawable/dog"
           app:civ_border_width="1dp"
           app:civ_border_color="@color/colorPrimary"/>


       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/btn_change_dp"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_toRightOf="@+id/profile_image"
           android:src="@drawable/ic_action_edit"
           android:tint="@color/black"
           app:civ_fill_color="@color/colorPrimary"
           app:civ_border_width="4dp"
           android:layout_marginLeft="-50dp"
           android:layout_marginTop="140dp"
           app:civ_border_color="#fff3f3f3"/>

       <!--ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:foreground="@drawable/round"
           android:layout_marginTop="150dp"
           android:layout_centerInParent="true"
           android:id="@+id/imgEdit"
           android:src="@drawable/ic_menu_camera" /-->


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/profile_image"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="16dp"
           android:text="Karan Bheda"
           android:textColor="@color/colorAccent"
           android:textSize="21sp"
           android:id="@+id/tv_name"
           android:textStyle="bold"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="E-mail"
           android:textColor="@color/black"
           android:textSize="16sp"
           android:id="@+id/tv_heading1"
           android:layout_below="@+id/tv_name"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_heading1"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="5dp"
           android:text="bhedakaran1@gmail.com"
           android:textColor="@color/colorAccent"
           android:textSize="21sp"
           android:id="@+id/tv_email"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:text="Mobile"
           android:textColor="@color/black"
           android:textSize="16sp"
           android:id="@+id/tv_heading2"
           android:layout_below="@+id/tv_email"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/tv_heading2"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="5dp"
           android:text="9619951142"
           android:textColor="@color/colorAccent"
           android:textSize="21sp"
           android:id="@+id/tv_mobile"

           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mobile"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/ll"
            android:weightSum="2"
            android:layout_marginTop="40dp">
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1">

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/rr_exclusive"
                   android:paddingRight="10dp">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:id="@+id/check_twitter"
                       android:src="@drawable/ic_deactivate_twitter"
                       android:layout_centerHorizontal="true"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/check_twitter"
                       android:text="Disconnected"
                       android:textAlignment="center"
                       android:textSize="17sp"
                       android:id="@+id/status_twitter"
                       android:layout_marginTop="5dp"
                       android:textColor="@color/red" />

               </RelativeLayout>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1">

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:layout_centerHorizontal="true"
                   android:paddingRight="10dp"
                   android:id="@+id/rr_general">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:layout_width="85dp"
                       android:layout_height="85dp"
                       android:layout_centerHorizontal="true"
                       android:id="@+id/check_fb"
                       android:src="@drawable/ic_deactivate_fb" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/check_fb"
                       android:text="Disconnected"
                       android:textAlignment="center"
                       android:id="@+id/status_fb"
                       android:textSize="17sp"
                       android:textColor="@color/red" />
               </RelativeLayout>
           </RelativeLayout>
       </LinearLayout>
       <Button
           android:text="Log Out"
           android:background="@drawable/mybutton"
           android:paddingLeft="40dp"
           android:paddingRight="40dp"
           android:textColor="@color/white"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="20dp"
           android:layout_below="@+id/ll"
           android:id="@+id/btn_redeem"
           />

   </RelativeLayout>

</ScrollView>

</FrameLayout>
