<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Select Display Picture From"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:id="@+id/box_heading"
        android:layout_marginTop="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/display_twitter"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_active_twitter" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_twitter"
                android:id="@+id/tv_your_miles"
                android:text="Twitter"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="#c1c1c1"
            android:alpha="0.6"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/display_fb"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_active_fb" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_fb"
                android:id="@+id/tv_your_offers_claimed"
                android:text="Facebook"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textAlignment="center"/>
        </RelativeLayout>
    </LinearLayout>

     <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="CHANGE"
            android:id="@+id/btn_change"
            android:textColor="@color/colorAccent"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c1c1c1"
            android:alpha="0.6"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="CANCEL"
            android:id="@+id/btn_cancel"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>