<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:htext="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_alternate_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context="com.footprynt.footprynt.AlternateLoginActivity"
    android:background="#f7f7f7">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome Karan Bheda,"
    android:layout_marginTop="100dp"
    android:layout_centerHorizontal="true"
    android:textColor="@color/colorPrimary"
    android:textStyle="bold"
    android:textSize="23sp"
    android:id="@+id/tv_welcome"/>

    <TextView
        android:id="@+id/tv_alternate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/tv_welcome"
        android:textColor="@color/colorAccent"
        android:maxLines="4"
        android:textSize="20sp"/>

    <com.facebook.login.widget.LoginButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/tv_alternate"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="18sp"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:id="@+id/fblogin"/>

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/tv_alternate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:id="@+id/twtlogin"/>

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="@string/skip"
        android:textSize="16sp"
        android:textColor="@color/colorAccent" />


</RelativeLayout>
